{% extends "base.html.twig" %}

{% block body %}
{% if error %}
    <div class="alert alert-danger">{{ error.messageKey }}</div>
{% endif %}

<form method="post">
    <label for="email">Email</label>
    <input type="email" name="_username" id="email" value="{{ last_username }}" class="form-control" required>
     <label for="password">Mot de passe</label>
    <input type="password" name="_password" id="password" class="form-control" required>

    <input type="submit" value="Se connecter" class="btn btn-primary mt-2">
</form>
{% endblock %}